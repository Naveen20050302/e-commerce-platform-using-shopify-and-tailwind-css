<div class="text-center">
    <a href="{{ product.url }}">
        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="mb-2">
        <h3 class="font-bold">{{ product.title }}</h3>
        <p class="text-gray-600">{{ product.price | money }}</p>
    </a>
</div>
