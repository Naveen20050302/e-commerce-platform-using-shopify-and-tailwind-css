<article class="container mx-auto my-8 px-4">
    <div class="flex flex-wrap md:flex-nowrap">
        <div class="w-full md:w-1/2">
            <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
        </div>
        <div class="w-full md:w-1/2 md:pl-8">
            <h1 class="text-3xl font-bold">{{ product.title }}</h1>
            <p class="text-gray-700 mt-4">{{ product.description }}</p>
            <p class="text-2xl font-bold mt-4">{{ product.price | money }}</p>
            <form action="/cart/add" method="post" class="mt-4">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Add to Cart</button>
            </form>
        </div>
    </div>
</article>
