<section class="bg-cover bg-center h-64" style="background-image: url('{{ section.settings.image | img_url: 'large' }}');">
    <div class="container mx-auto h-full flex items-center justify-center text-white">
        <h2 class="text-4xl font-bold">{{ section.settings.heading }}</h2>
    </div>
</section>

{% schema %}
{
    "name": "Hero Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Banner Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading Text"
        }
    ]
}
{% endschema %}
